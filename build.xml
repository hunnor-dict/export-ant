		</zip>
		<delete file="HunNor-ST-NoSym-Number-NH.dict.dz"/>
		<delete file="HunNor-ST-NoSym-Number-NH.ifo"/>
		<delete file="HunNor-ST-NoSym-Number-NH.idx"/>
		<delete file="HunNor-ST-NoSym-Number-NH.syn"/>
		<!-- Deploy to target directory -->
		<move file="HunNor-ST-NoSym-Number-NH.zip" todir="${dropbox.public.exports}"/>
